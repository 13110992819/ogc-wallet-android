<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f6f6f6"
        android:clipChildren="false"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            tools:showIn="@layout/fragment_user2">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:background="@drawable/user_bg" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:gravity="center"
                android:text="@string/main_tab_my"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="75dp"
                android:layout_weight="1"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginBottom="15dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/user_fragment_card_cornerradius"
                        app:cardElevation="@dimen/user_fragment_card_elevation">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="15dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text="哈哈哈"
                                    android:textColor="@color/text_black_cd"
                                    android:textSize="16sp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="25dp"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/phone" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:ellipsize="end"
                                        android:maxLines="1"
                                        android:text="KAs登录开发达芙妮"
                                        android:textColor="@color/gray_666666"
                                        android:textSize="12sp" />

                                </LinearLayout>


                            </LinearLayout>

                            <ImageView
                                android:layout_width="65dp"
                                android:layout_height="65dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="15dp"
                                android:src="@drawable/user_logo" />


                        </LinearLayout>


                    </android.support.v7.widget.CardView>


                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/user_fragment_card_cornerradius"
                        app:cardElevation="@dimen/user_fragment_card_elevation">

                        <LinearLayout
                            android:id="@+id/linLayout_user_account"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="@dimen/user_fragment_item_img_width"
                                android:layout_height="@dimen/user_fragment_item_img_height"
                                android:layout_marginLeft="15dp"
                                android:src="@drawable/lock" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_weight="1"
                                android:text="账户与安全"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="15dp"
                                android:background="@mipmap/more" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:cardCornerRadius="@dimen/user_fragment_card_cornerradius"
                        app:cardElevation="@dimen/user_fragment_card_elevation">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="@dimen/user_fragment_item_img_width"
                                    android:layout_height="@dimen/user_fragment_item_img_height"
                                    android:layout_marginLeft="15dp"
                                    android:src="@drawable/user_item_2" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:layout_weight="1"
                                    android:text="本地货币"
                                    android:textColor="@color/black"
                                    android:textSize="14sp" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="15dp"
                                    android:background="@mipmap/more" />

                            </LinearLayout>

                            <View
                                style="@style/style_split_line"
                                android:layout_marginLeft="48dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="@dimen/user_fragment_item_img_width"
                                    android:layout_height="@dimen/user_fragment_item_img_height"
                                    android:layout_marginLeft="15dp"
                                    android:src="@drawable/user_item_3" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:layout_weight="1"
                                    android:text="语言"
                                    android:textColor="@color/black"
                                    android:textSize="14sp" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="15dp"
                                    android:background="@mipmap/more" />

                            </LinearLayout>

                        </LinearLayout>


                    </android.support.v7.widget.CardView>


                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:cardCornerRadius="@dimen/user_fragment_card_cornerradius"
                        app:cardElevation="@dimen/user_fragment_card_elevation">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="@dimen/user_fragment_item_img_width"
                                    android:layout_height="@dimen/user_fragment_item_img_height"
                                    android:layout_marginLeft="15dp"
                                    android:src="@drawable/user_item_4" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:layout_weight="1"
                                    android:text="加入社群"
                                    android:textColor="@color/black"
                                    android:textSize="14sp" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="15dp"
                                    android:background="@mipmap/more" />

                            </LinearLayout>

                            <View
                                style="@style/style_split_line"
                                android:layout_marginLeft="48dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="@dimen/user_fragment_item_img_width"
                                    android:layout_height="@dimen/user_fragment_item_img_height"
                                    android:layout_marginLeft="15dp"
                                    android:src="@drawable/user_item_5" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:layout_weight="1"
                                    android:text="钱包工具"
                                    android:textColor="@color/black"
                                    android:textSize="14sp" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="15dp"
                                    android:background="@mipmap/more" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="@dimen/user_fragment_item_img_width"
                                    android:layout_height="@dimen/user_fragment_item_img_height"
                                    android:layout_marginLeft="18dp"
                                    android:src="@drawable/user_item_6" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:layout_weight="1"
                                    android:text="帮助中心"
                                    android:textColor="@color/black"
                                    android:textSize="14sp" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="15dp"
                                    android:background="@mipmap/more" />

                            </LinearLayout>

                            <View
                                style="@style/style_split_line"
                                android:layout_marginLeft="48dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="@dimen/user_fragment_item_img_width"
                                    android:layout_height="@dimen/user_fragment_item_img_height"
                                    android:layout_marginLeft="15dp"
                                    android:src="@drawable/user_item_7" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:layout_weight="1"
                                    android:text="关于我们"
                                    android:textColor="@color/black"
                                    android:textSize="14sp" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="15dp"
                                    android:background="@mipmap/more" />

                            </LinearLayout>

                        </LinearLayout>


                    </android.support.v7.widget.CardView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="50dp" />

                </LinearLayout>

            </ScrollView>
        </FrameLayout>

    </LinearLayout>
</layout>
