<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/invite_bg_3"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="405dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="140dp"
            android:background="@drawable/backup_bg"
            android:orientation="vertical">

            <com.cdkj.token.views.DashLineView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="125dp" />

            <FrameLayout
                android:layout_width="@dimen/friend_qrimg_friend_width"
                android:layout_height="@dimen/friend_qrimg_friend_width"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="65dp"
                android:layout_marginRight="65dp"
                android:layout_marginTop="50dp"
                android:background="#F8F8F8"
                android:padding="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@mipmap/default_pic" />

            </FrameLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/friend_qrimg_1"
                android:textColor="@color/gray_999999"
                android:textSize="12sp" />

        </LinearLayout>


        <ImageView
            android:layout_width="140dp"
            android:layout_height="32dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="19dp"
            android:src="@drawable/app_icon_2" />

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="left"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="15dp"
            android:paddingBottom="8dp"
            android:paddingLeft="13dp"
            android:paddingRight="10dp"
            android:src="@drawable/back_img" />


    </FrameLayout>
</layout>
