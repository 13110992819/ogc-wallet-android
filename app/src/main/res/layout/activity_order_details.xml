<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="#4265E0" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/icon_left_arrow" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="订单详情"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_title_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:text="取消交易"
                    android:textColor="@color/white"
                    android:visibility="gone" />

            </FrameLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="65dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/user_fragment_card_cornerradius"
                app:cardElevation="@dimen/user_fragment_card_elevation"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:id="@+id/ll_type3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"

                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_type"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            tools:src="@mipmap/icon_pay_success" />

                        <TextView
                            android:id="@+id/tv_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/gray_333333"
                            android:textSize="17sp"
                            tools:text="已完成" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_type_msg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="15dp"
                        android:textColor="@color/gray_333333"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        tools:text="买入0.054784562BTC" />

                    <TextView
                        android:id="@+id/tv_total_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="15dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp"
                        tools:text="总价100¥" />

                    <TextView
                        android:id="@+id/tv_type_massage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="15dp"
                        android:textColor="@color/gray_999999"
                        android:textSize="12sp"
                        tools:text="币已转入您的钱包账户，交易完成" />

                    <View
                        style="@style/style_split_line"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="15dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"
                            android:text="订单编号"
                            android:textColor="@color/gray_666666"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tv_order_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray_333333"
                            android:textSize="14sp"
                            tools:text="45632123654875112" />
                    </LinearLayout>

                    <View
                        style="@style/style_split_line"
                        android:layout_width="match_parent"
                        android:layout_height="1dp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"
                            android:text="类型"
                            android:textColor="@color/gray_666666"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tv_buy_or_pay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray_333333"
                            android:textSize="14sp"
                            tools:text="买入" />
                    </LinearLayout>

                    <View
                        style="@style/style_split_line"
                        android:layout_width="match_parent"
                        android:layout_height="1dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"
                            android:text="单价"
                            android:textColor="@color/gray_666666"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tv_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray_333333"
                            android:textSize="14sp"
                            tools:text="¥100" />
                    </LinearLayout>

                    <View
                        style="@style/style_split_line"
                        android:layout_width="match_parent"
                        android:layout_height="1dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"
                            android:text="下单时间"
                            android:textColor="@color/gray_666666"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tv_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray_333333"
                            android:textSize="14sp"
                            tools:text="2018-12-12 12:00:00" />
                    </LinearLayout>

                    <View
                        android:id="@+id/view_collection"
                        style="@style/style_split_line"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/ll_collection"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"
                            android:text="收款信息"
                            android:textColor="@color/gray_666666"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tv_collection_msg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray_333333"
                            android:textSize="14sp"
                            tools:text="工商银行 (尾号: 6314)" />
                    </LinearLayout>

                    <View
                        style="@style/style_split_line"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="50dp" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_type0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@mipmap/icon_pay_loding" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="待支付"
                            android:textColor="@color/gray_333333"
                            android:textSize="17sp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_unpaid_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="15dp"
                        android:textColor="@color/gray_333333"
                        android:textSize="20sp"
                        tools:text="¥100" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:text="转账附言"
                            android:textColor="@color/gray_999999"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_fuyan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:textColor="#4064E6"
                            android:textSize="16sp"
                            tools:text="UDS7" />

                        <TextView
                            android:id="@+id/tv_fuyan_copy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:text="复制"
                            android:textColor="#4064E6"
                            android:textSize="12sp" />

                    </LinearLayout>


                    <View
                        style="@style/style_split_line"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="15dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:id="@+id/fl_pay_bg"
                            android:layout_width="50dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:background="@mipmap/icon_pay_bg">

                            <ImageView
                                android:id="@+id/iv_pay_logo"
                                android:layout_width="17dp"
                                android:layout_height="13dp"
                                android:layout_gravity="center"
                                android:background="@mipmap/icon_pay_bg"
                                android:src="@mipmap/icon_ali_logo" />
                        </FrameLayout>


                        <TextView
                            android:id="@+id/tv_pay_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="支付宝"
                            android:textColor="@color/gray_666666"
                            android:textSize="13sp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/tv_onekey_copy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="一键复制"
                            android:textColor="@color/colorPrimary"
                            android:textSize="14sp" />


                    </LinearLayout>

                    <View
                        style="@style/style_split_line"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorPrimary" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:background="#FFF6EF"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="请按照以下方式付款,转账请务必填写转账附言码"
                        android:textColor="#FA7D0E"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/iv_qr"
                        android:layout_width="155dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:src="@mipmap/icon_pay_course"
                        android:visibility="gone" />


                    <LinearLayout
                        android:id="@+id/ll_back"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"

                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="65dp"
                                android:layout_height="wrap_content"
                                android:text="收款人"
                                android:textColor="@color/gray_666666"
                                android:textSize="13sp" />

                            <TextView
                                android:id="@+id/tv_payee"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="@color/gray_333333"
                                android:textSize="14sp"
                                tools:text="zhangsan" />

                            <TextView
                                android:id="@+id/tv_payee_copy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="复制"
                                android:textColor="@color/colorPrimary"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <View
                            style="@style/style_split_line"
                            android:layout_width="match_parent"
                            android:layout_height="1dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="65dp"
                                android:layout_height="wrap_content"
                                android:text="银行卡号"
                                android:textColor="@color/gray_666666"
                                android:textSize="13sp" />

                            <TextView
                                android:id="@+id/tv_bank_number"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="@color/gray_333333"
                                android:textSize="14sp"
                                tools:text="89794651354654" />

                            <TextView
                                android:id="@+id/tv_bank_number_copy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="复制"
                                android:textColor="@color/colorPrimary"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <View
                            style="@style/style_split_line"
                            android:layout_width="match_parent"
                            android:layout_height="1dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="65dp"
                                android:layout_height="wrap_content"
                                android:text="收款银行"
                                android:textColor="@color/gray_666666"
                                android:textSize="13sp" />

                            <TextView
                                android:id="@+id/tv_bank_name"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="@color/gray_333333"
                                android:textSize="14sp"
                                tools:text="民生银行" />

                            <TextView
                                android:id="@+id/tv_bank_name_copy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="复制"
                                android:textColor="@color/colorPrimary"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <View
                            style="@style/style_split_line"
                            android:layout_width="match_parent"
                            android:layout_height="1dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="65dp"
                                android:layout_height="wrap_content"
                                android:text="开户行"
                                android:textColor="@color/gray_666666"
                                android:textSize="13sp" />

                            <TextView
                                android:id="@+id/tv_bank_branch"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="杭州支行"
                                android:textColor="@color/gray_333333"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_bank_branch_copy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="复制"
                                android:textColor="@color/colorPrimary"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <View
                            style="@style/style_split_line"
                            android:layout_width="match_parent"
                            android:layout_height="1dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/icon_account_security" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="收款账户经过平台认证，请放心付款"
                            android:textColor="#0EC55B"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_confirm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="20dp"
                        android:background="@color/colorPrimary"
                        android:text="我已完成付款"
                        android:textColor="@color/white" />


                </LinearLayout>
            </android.support.v7.widget.CardView>
        </FrameLayout>

    </ScrollView>
</layout>
