<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_weight="0.921"
            android:layout_height="0dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.scwang.smartrefresh.layout.SmartRefreshLayout
                    android:id="@+id/refreshLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/gray_bg"
                    app:srlAccentColor="@android:color/tertiary_text_dark"
                    app:srlEnablePreviewInEditMode="true"
                    app:srlPrimaryColor="@color/gray_bg">

                    <!--srlAccentColor srlPrimaryColor 将会改变 Header 和 Footer 的主题颜色-->
                    <!--srlEnablePreviewInEditMode 可以开启和关闭预览功能-->
                    <com.cdkj.baselibrary.views.refresh.ClassicsHeader2
                        android:layout_marginTop="40dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scrollbars="none">

                        <LinearLayout
                            android:background="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:background="@mipmap/income_rank_bg"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="307dp">

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:visibility="invisible"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:paddingBottom="10dp"
                                        android:paddingLeft="15dp"
                                        android:paddingRight="15dp"
                                        android:paddingTop="10dp"
                                        android:src="@drawable/back_white" />

                                    <TextView
                                        android:visibility="invisible"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="30dp"
                                        android:layout_marginRight="30dp"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/title_mid_size" />


                                </FrameLayout>


                                <LinearLayout
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginRight="15dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <LinearLayout
                                        android:orientation="vertical"
                                        android:gravity="center_horizontal"
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:layout_height="match_parent">

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_weight="498"
                                            android:layout_height="0dp">

                                            <FrameLayout
                                                android:layout_gravity="bottom"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content">

                                                <ImageView
                                                    android:id="@+id/iv_avatar_rank2"
                                                    android:layout_marginTop="3dp"
                                                    android:layout_gravity="center_horizontal"
                                                    android:layout_width="55dp"
                                                    android:layout_height="55dp" />

                                                <ImageView
                                                    android:layout_gravity="center_horizontal"
                                                    android:background="@mipmap/income_no2"
                                                    android:layout_width="60dp"
                                                    android:layout_height="72dp" />

                                            </FrameLayout>

                                        </LinearLayout>

                                        <TextView
                                            android:id="@+id/tv_mobile_rank2"
                                            tools:text="189****5240"
                                            android:textSize="12sp"
                                            android:textColor="@color/white"
                                            android:layout_width="wrap_content"
                                            android:layout_weight="201"
                                            android:layout_height="0dp" />

                                        <LinearLayout
                                            android:orientation="vertical"
                                            android:gravity="center_horizontal"
                                            android:layout_width="match_parent"
                                            android:layout_weight="300"
                                            android:layout_height="0dp">

                                            <TextView
                                                android:layout_marginTop="10dp"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="@string/expect_income_btc"
                                                android:textColor="#ffffffff"
                                                android:textSize="10sp"
                                                />

                                            <TextView
                                                android:id="@+id/tv_income_rank2"
                                                android:layout_marginTop="2dp"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="≈96.9999"
                                                android:textColor="#ffffffff"
                                                android:textSize="14sp"
                                                />

                                            <TextView
                                                android:background="@drawable/bg_income_rank_share"
                                                android:gravity="center_vertical"
                                                android:layout_marginTop="4dp"
                                                android:paddingRight="9dp"
                                                android:paddingLeft="9dp"
                                                android:layout_width="wrap_content"
                                                android:layout_height="18dp"
                                                android:text="@string/income_share"
                                                android:textColor="#ffffffff"
                                                android:textSize="10sp"
                                                />

                                        </LinearLayout>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:orientation="vertical"
                                        android:gravity="center_horizontal"
                                        android:layout_width="140dp"
                                        android:layout_height="match_parent">

                                        <FrameLayout
                                            android:layout_width="wrap_content"
                                            android:layout_weight="0.429"
                                            android:layout_height="0dp">

                                            <ImageView
                                                android:id="@+id/iv_avatar_rank1"
                                                android:layout_marginTop="13.5dp"
                                                android:layout_gravity="center_horizontal"
                                                android:layout_width="75dp"
                                                android:layout_height="75dp" />

                                            <ImageView
                                                android:layout_gravity="center_horizontal"
                                                android:background="@mipmap/income_no1"
                                                android:layout_width="80dp"
                                                android:layout_height="102dp" />

                                        </FrameLayout>

                                        <TextView
                                            android:id="@+id/tv_mobile_rank1"
                                            tools:text="189****5240"
                                            android:textSize="12sp"
                                            android:textColor="@color/white"
                                            android:layout_width="wrap_content"
                                            android:layout_weight="0.197"
                                            android:layout_height="0dp" />

                                        <LinearLayout
                                            android:gravity="center_horizontal"
                                            android:orientation="vertical"
                                            android:layout_width="match_parent"
                                            android:layout_weight="0.382"
                                            android:layout_height="0dp">

                                            <TextView
                                                android:layout_marginTop="17dp"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="@string/expect_income_btc"
                                                android:textColor="#ffffffff"
                                                android:textSize="10sp"
                                                />

                                            <TextView
                                                android:id="@+id/tv_income_rank1"
                                                android:layout_marginTop="2dp"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="≈96.9999"
                                                android:textColor="#ffffffff"
                                                android:textSize="17sp"
                                                />

                                            <TextView
                                                android:background="@drawable/bg_income_rank_share"
                                                android:gravity="center_vertical"
                                                android:layout_marginTop="8dp"
                                                android:paddingRight="9dp"
                                                android:paddingLeft="9dp"
                                                android:layout_width="wrap_content"
                                                android:layout_height="18dp"
                                                android:text="@string/income_share"
                                                android:textColor="#ffffffff"
                                                android:textSize="10sp"
                                                />

                                        </LinearLayout>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:orientation="vertical"
                                        android:gravity="center_horizontal"
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:layout_height="match_parent">

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_weight="488"
                                            android:layout_height="0dp">

                                            <FrameLayout
                                                android:layout_gravity="bottom"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content">

                                                <ImageView
                                                    android:id="@+id/iv_avatar_rank3"
                                                    android:layout_marginTop="3dp"
                                                    android:layout_gravity="center_horizontal"
                                                    android:layout_width="55dp"
                                                    android:layout_height="55dp" />

                                                <ImageView
                                                    android:layout_gravity="center_horizontal"
                                                    android:background="@mipmap/income_no3"
                                                    android:layout_width="60dp"
                                                    android:layout_height="72dp" />

                                            </FrameLayout>

                                        </LinearLayout>

                                        <TextView
                                            android:id="@+id/tv_mobile_rank3"
                                            tools:text="189****5240"
                                            android:textSize="12sp"
                                            android:textColor="@color/white"
                                            android:layout_width="wrap_content"
                                            android:layout_weight="251"
                                            android:layout_height="0dp" />

                                        <LinearLayout
                                            android:gravity="center_horizontal"
                                            android:orientation="vertical"
                                            android:layout_width="match_parent"
                                            android:layout_weight="260"
                                            android:layout_height="0dp">

                                            <TextView
                                                android:layout_marginTop="9dp"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="@string/expect_income_btc"
                                                android:textColor="#ffffffff"
                                                android:textSize="10sp"
                                                />

                                            <TextView
                                                android:id="@+id/tv_income_rank3"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="≈96.9999"
                                                android:textColor="#ffffffff"
                                                android:textSize="14sp"
                                                />

                                            <TextView
                                                android:background="@drawable/bg_income_rank_share"
                                                android:gravity="center_vertical"
                                                android:layout_marginTop="1dp"
                                                android:paddingRight="9dp"
                                                android:paddingLeft="9dp"
                                                android:layout_width="wrap_content"
                                                android:layout_height="18dp"
                                                android:text="@string/income_share"
                                                android:textColor="#ffffffff"
                                                android:textSize="10sp"
                                                />

                                        </LinearLayout>

                                    </LinearLayout>


                                </LinearLayout>

                            </LinearLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.435"
                                android:descendantFocusability="blocksDescendants">

                                <android.support.v7.widget.RecyclerView
                                    android:id="@+id/rv"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:overScrollMode="never" />

                            </RelativeLayout>

                        </LinearLayout>

                    </ScrollView>

                    <com.cdkj.baselibrary.views.refresh.ClassicsFooter2
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                </com.scwang.smartrefresh.layout.SmartRefreshLayout>

            </LinearLayout>

            <FrameLayout
                android:id="@+id/fraLayout_title"
                android:background="@drawable/rect_blue_change"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <ImageView
                    android:scaleType="matrix"
                    android:src="@mipmap/income_rank_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <ImageView
                    android:id="@+id/img_finish"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:src="@drawable/back_white" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:text="@string/global_income_rank"
                    android:textColor="@color/white"
                    android:textSize="@dimen/title_mid_size" />


            </FrameLayout>

        </FrameLayout>

        <View
            style="@style/style_split_line"/>

        <LinearLayout
            android:gravity="center_vertical"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_weight="0.080"
            android:layout_height="0dp">

            <ImageView
                android:id="@+id/iv_avatar"
                android:layout_width="50dp"
                android:layout_height="match_parent" />

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="我的137****1878"
                    android:textColor="#ff999999"
                    android:textSize="10sp"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_rank_text"
                        android:layout_marginTop="1dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/income_rank"
                        android:textStyle="bold"
                        android:textColor="#ff333333"
                        android:textSize="12sp"
                        />

                    <TextView
                        android:id="@+id/tv_rank"
                        android:layout_marginTop="1dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textStyle="bold"
                        android:textColor="#ff333333"
                        android:textSize="12sp"
                        />

                </LinearLayout>

            </LinearLayout>

            <com.cdkj.token.views.DashVLineView
                android:layout_marginRight="45dp"
                android:layout_width="1dp"
                android:layout_height="30dp" />

            <LinearLayout
                android:gravity="right"
                android:layout_marginRight="15dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/expect_income"
                    android:textColor="#ff999999"
                    android:textSize="10sp"
                    />

                <TextView
                    android:id="@+id/tv_incomeTotal"
                    android:layout_marginTop="1dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="98 BTC"
                    android:textStyle="bold"
                    android:textColor="#ff333333"
                    android:textSize="12sp"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</layout>
