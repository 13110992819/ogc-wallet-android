<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <com.cdkj.token.views.SignInEditClearLayout
            android:id="@+id/edt_phone_old"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            app:hint_text="请输入手机号"
            app:is_show_clear="false"
            app:is_show_split_line="false">

        </com.cdkj.token.views.SignInEditClearLayout>


        <com.cdkj.token.views.SignInEditClearCodeLayout
            android:id="@+id/edt_code_old"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            app:hint_text="请输入验证码"
            app:is_show_clear="false"
            app:is_show_split_line="false" />


        <com.cdkj.token.views.SignInEditClearLayout
            android:id="@+id/edt_phone_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            app:hint_text="新手机号"
            app:is_show_clear="false"
            app:is_show_split_line="false">

        </com.cdkj.token.views.SignInEditClearLayout>


        <com.cdkj.token.views.SignInEditClearCodeLayout
            android:id="@+id/edt_code_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            app:hint_text="请输入验证码"
            app:is_show_clear="false"
            app:is_show_split_line="false" />

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/cd_btn_height"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/selector_blue"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </LinearLayout>
</layout>